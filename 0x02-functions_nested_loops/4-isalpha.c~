/**
 * _isalpha - checks a char c is alphabetic (lowercase or uppercase) or not
 *@c: character to be checked
 * Return: 1 if alphabetic character, 0 otherwise
 */

int _isalpha(int c)
{
	int i = 0;
	
	if (c >= (i + 'a') && c <= (i + 'z'))
		return (1);
	else if (c >= (i + 'A') && c <= (i + 'Z'))
		return (1);
	else
		return (0);
}
